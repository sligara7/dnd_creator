# Example environment variables file
# Copy this to .env and add your actual API key for local testing

# OpenAI API Key (optional - defaults to Ollama if not provided)
OPENAI_API_KEY=your-openai-api-key-here

# LLM Service Configuration
LLM_PROVIDER=openai  # or "ollama" for local testing
LLM_MODEL=gpt-4     # or "llama3" for Ollama

# Rate Limiting (optional)
REQUESTS_PER_MINUTE=3
REQUESTS_PER_DAY=200
TOKENS_PER_MINUTE=40000
