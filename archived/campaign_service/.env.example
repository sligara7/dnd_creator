# Campaign Service Environment Variables

# Required
SECRET_KEY=your-64-character-secret-key

# Service Communication
MESSAGE_HUB_URL=http://message_hub:8200
MESSAGE_HUB_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dnd_campaigns
DATABASE_ECHO=false  # Set to true for SQL query logging

# Server Configuration
HOST=0.0.0.0
PORT=8001  # Different port from character service
DEBUG=false

# Version Control Configuration
GIT_STORAGE_PATH=/data/campaign_versions
BRANCH_LIMIT=5  # Maximum branches per campaign

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO  # INFO, DEBUG, WARNING, ERROR
LOG_FORMAT=json  # json or text
