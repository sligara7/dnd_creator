FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Install Python Ollama client
RUN pip3 install ollama

# Pull the llama3 model
RUN ollama pull llama3

# Expose Ollama API port
EXPOSE 11434

# Create directory for character creator application
WORKDIR /app

# Copy application files
COPY . /app/

# Configure Ollama to listen on all interfaces
ENV OLLAMA_HOST=0.0.0.0

# Start Ollama server and then keep container running
CMD ["sh", "-c", "ollama serve & python3 -u character_creator.py"]

# Note: When running the container, use:
# podman run -p 11434:11434 --name dnd-character-creator dnd-character-creator-image

# podman build -t dnd-character-creator-image -f containerfile .
# podman run -p 11434:11434 --name dnd-character-creator dnd-character-creator-image