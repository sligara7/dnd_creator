# Image Service Environment Variables

# Required
SECRET_KEY=your-64-character-secret-key

# Service Communication
MESSAGE_HUB_URL=http://message_hub:8200
MESSAGE_HUB_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dnd_images
DATABASE_ECHO=false  # Set to true for SQL query logging

# Server Configuration
HOST=0.0.0.0
PORT=8002  # Different port from other services
DEBUG=false

# Image Storage Configuration
IMAGE_STORAGE_PATH=/data/images
MAX_IMAGE_SIZE=4096  # Maximum image dimension
IMAGE_FORMAT=png     # Default image format

# GPU Configuration
GPU_MEMORY_LIMIT=8192  # MB of GPU memory to use
BATCH_SIZE=4          # Number of images to generate in parallel

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO  # INFO, DEBUG, WARNING, ERROR
LOG_FORMAT=json  # json or text
