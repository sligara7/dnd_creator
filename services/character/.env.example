# Service Information
SERVICE_NAME=character
VERSION=0.1.0
DEBUG=false
PORT=8000

# Security
SECRET_KEY=your-secret-key-here
AUTH_SERVICE_URL=http://auth:8500
TOKEN_EXPIRE_MINUTES=15

# CORS
CORS_ORIGINS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/character_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_RECYCLE=1800
DATABASE_ECHO=false

# Message Hub
MESSAGE_HUB_URL=http://message:8200
MESSAGE_HUB_TIMEOUT=5

# LLM Service
LLM_SERVICE_URL=http://llm:8100
LLM_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://redis:6379/0
REDIS_TIMEOUT=5

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=8001

# Character Validation
MAX_LEVEL=20
MAX_ABILITY_SCORE=30
MAX_PROFICIENCY_BONUS=6

# Content Generation
ENABLE_CUSTOM_CONTENT=true
MAX_CUSTOM_ITEMS=100
CONTENT_APPROVAL_REQUIRED=true

# Journal System
MAX_JOURNAL_ENTRIES=1000
MAX_ENTRY_LENGTH=10000

# Version Control
MAX_VERSIONS=100
MAX_BRANCHES=10

# Performance
REQUEST_TIMEOUT=60
MAX_CONCURRENT_CREATIONS=10
CHARACTER_CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
